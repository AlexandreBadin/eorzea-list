<div class="navbar">
  <div class="container">
    <%= link_to (root_path), class: "navbar-brand", style: "color: black" do %>
      <h1 id="btn-home">E<span style="color: #FF5151">O</span>RZEA LIST</h1>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to lists_path, class: "lists-btn #{'clicked' if current_page? lists_path(@list)}" do %>
        <i class="fas fa-list"></i>
        My Lists
      <% end %>
    <% end %>

    <div class="user-content">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag current_user.avatar_url, class: "user-avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <span class="username-discriminator"><%= current_user.username %>#<%= current_user.discriminator %></span>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "#", class: "dropdown-item" do %>
              <i class="fas fa-cog"></i>
              Account
            <% end %>

            <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
              <i class="fas fa-sign-out-alt"></i>
              Disconnect
            <% end %>
          </div>
        </li>
      <% else %>
        <%= link_to user_discord_omniauth_authorize_path, method: :post, class: 'btn-discord' do %>
          <i class="fab fa-discord"></i>
          Sign in with Discord
        <% end %>
      <% end %>
    </div>
  </div>
</div>
